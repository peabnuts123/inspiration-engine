{
  "name": "inspiration-engine",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:peabnuts123/inspiration-engine.git",
  "author": "peabnuts123 <peabnuts123@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "http-server": "^0.9.0",
    "jquery": "^3.1.1",
    "npm-watch": "^0.1.8",
    "rimraf": "^2.5.4",
    "svelte-cli": "^1.3.0",
    "yarn": "^0.19.1"
  },
  "scripts": {
    "start": "yarn run build && http-server dist",
    "build": "rimraf dist/components && svelte compile -f iife -i src/ -o dist/components",
    "watch": "npm-watch",
    "deploy-gh-pages": "git subtree push --prefix dist origin gh-pages"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "html"
    }
  }
}
